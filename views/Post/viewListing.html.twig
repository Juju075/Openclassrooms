<section class="blog-area section">
  <!-- get alerts ici -->
  {% if getalert == 'listing&register=created' %}
  <!-- route: listing&register=created -->
  <!-- alert=1 -->
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Votre compte est crée!

    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&post=created' %}
  <!-- route: listing&post=created -->
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Votre article est crée!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&passe=valide' %}
  <!-- route: listing&passe=valide -->
  <div class="alert alert-success alert-dismissible fade show" role="alert">
    Vous étes connecté!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&comment=notconnected' %}
  <!-- route: listing&comment=notconnected -->
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    Vous devez vous connecter pour effectuer cette action!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&login=error' %}
  <!-- route: listing&login=error -->
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    Vos credentials sont erronée!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&register=error' %}
  <!-- route: listing&register=error -->
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    Votre soumission est erronée!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&session=terminated' %}
  <!-- route: listing&session=terminated -->
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    Votre session est terminée!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&post=exist' %}
  <!-- route: listing&session=terminated -->
  <div class="alert alert-danger alert-dismissible fade show" role="alert">
    Cet Article existe déjà!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&message=sent' %}
  <!-- route: listing&message=send -->
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    Votre message est envoyé!
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
      <span aria-hidden="true">&times;</span>
    </button>
  </div>
  {% elseif getalert == 'listing&article=deleted' %}
  <!-- route: listing&message=send -->
  {% endif %}
  <!-- liste des aricles -->
  <div class="container">
    <div class="row">
      {% for article in articles %}
      <div class="col-lg-4 col-md-6">
        <div class="card h-100">
          <div class="single-post post-style-1">
            <div class="blog-image">
              <img
                src="public/images/{{
                  random([
                    'kemet01.jpg',
                    'kemet013.jpg',
                    'kemet012.jpg',
                    'kemet02.jpg',
                    'kemet011.jpg',
                    'kemet07.jpg',
                    'kemet03.jpg',
                    'kemet08.jpg',
                    'kemet09.jpg',
                    'kemet010.jpg',
                    'kemet06.jpg',
                    'kemet05.jpg',
                    'kemet04.jpg',
                    'kemet014.jpg'
                  ])
                }}"
                alt="Blog Image"
              />
            </div>
            <div class="avatar">
              <img
                src="public/images/icons8-team-355979.jpg"
                alt="Profile Image"
              />
            </div>
            <div class="blog-info">
              <h4 class="title">
                <a href="post&id_article={{ article.id_article }}"
                  ><b>{{ article.title }}</b></a
                >
              </h4>
              <h6>{{ article.chapo }}</h6>
            </div>
            <!-- blog-info -->
          </div>
          <!-- single-post -->
        </div>
        <!-- card -->
      </div>
      <!-- col-lg-4 col-md-6 -->
      <!-- Fin de l'iteration -->
      {% endfor %}
    </div>
    <!-- row -->
  </div>
  <!-- container -->
</section>
